<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
  </log>

  <solver-interface dimensions="2">
    <data:vector name="Force" />
    <data:vector name="Displacement" />

    <mesh name="Fluid-Mesh">
      <use-data name="Force" />
      <use-data name="Displacement" />
    </mesh>

    <mesh name="Solid-Mesh">
      <use-data name="Displacement" />
      <use-data name="Force" />
    </mesh>

    <participant name="Fluid">
      <use-mesh name="Fluid-Mesh" provide="yes" />
      <export:vtk directory="preCICE-output" />
      <use-mesh name="Solid-Mesh" from="Solid" />
      <write-data name="Force" mesh="Fluid-Mesh" />
      <read-data name="Displacement" mesh="Fluid-Mesh" />
      
      
      <mapping:rbf-compact-tps-c2
      	solver-rtol="1e-09" 
      	support-radius="1e-6"
        direction="write"
        from="Fluid-Mesh"
        to="Solid-Mesh"
        constraint="conservative" /> 
        
      <!--  
      <mapping:nearest-neighbor
        direction="write"
        from="Fluid-Mesh"
        to="Solid-Mesh"
        constraint="conservative" />
        -->
      <!--
      <mapping:nearest-neighbor
        direction="read"
        from="Solid-Mesh"
        to="Fluid-Mesh"
        constraint="consistent" />
        -->
      
      <mapping:rbf-compact-tps-c2
      	solver-rtol="1e-09" 
      	support-radius="1e-6"
        direction="read"
        from="Solid-Mesh"
        to="Fluid-Mesh"
        constraint="consistent" />
        
        
    </participant>

    <participant name="Solid">
      <use-mesh name="Solid-Mesh" provide="yes" />
      <export:vtk directory="preCICE-output" />
      <write-data name="Displacement" mesh="Solid-Mesh" />
      <read-data name="Force" mesh="Solid-Mesh" />
    </participant>

    <m2n:sockets from="Fluid" to="Solid" exchange-directory=".." />

    <coupling-scheme:parallel-implicit>
      <time-window-size value="1e-3" />
      <max-time value="10" />
      <participants first="Fluid" second="Solid" />
      <exchange data="Force" mesh="Solid-Mesh" from="Fluid" to="Solid" />
      <exchange data="Displacement" mesh="Solid-Mesh" from="Solid" to="Fluid" />
      <max-iterations value="100" />
      <relative-convergence-measure limit="5e-3" data="Displacement" mesh="Solid-Mesh" />
      <relative-convergence-measure limit="5e-3" data="Force" mesh="Solid-Mesh" />
      <!--<extrapolation-order value="1" />-->
      <acceleration:IQN-ILS>
        <data name="Displacement" mesh="Solid-Mesh" />
        <data name="Force" mesh="Solid-Mesh" />
        <preconditioner type="residual-sum" />
        <filter type="QR2" limit="1e-2" />
        <initial-relaxation value="0.1" />
        <max-used-iterations value="100" />
        <time-windows-reused value="20" />
      </acceleration:IQN-ILS>
    </coupling-scheme:parallel-implicit>
  </solver-interface>
</precice-configuration>
